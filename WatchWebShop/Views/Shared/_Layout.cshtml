<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WatchWebShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body id="valami">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
            <div class="container-fluid">

                <a class="nav-link text-light" asp-controller="Products" asp-action="Index">
                    <img src="~/Images/watchShopLogo.jpg" width="150px" height="auto" title="WebshopLogo">
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="navbar-nav flex-grow">
                        <a class="nav-link text-light" asp-controller="Products" asp-action="Index"><i class="bi bi-smartwatch"></i> Our Products</a>
                        </li>*@

                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="justify-content-center" style="margin:auto">
                                <center>
                                    <div class="text-50 text-light">
                                        <h3>Welcome in my first ASP.NET CORE 5 MVC E-Commerce Testproject</h3>
                                    </div>
                                </center>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>

                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Manufacturers" asp-action="Index"><i class="bi bi-bank"></i> Brands</a>
                                    <a class="dropdown-item" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags"></i> Categories</a>
                                    <a class="dropdown-item" asp-controller="Statistics" asp-action="Index"><i class="bi bi-bar-chart-line"></i> Statistics - Products</a>
                                    <a class="dropdown-item" asp-controller="Statistics" asp-action="GenresChart"><i class="bi bi-bar-chart-line"></i> Statistics - Genres</a>
                                </div>
                            </li>
                        }
                    </ul>

                    <form class="form-inline my-2 my-lg-0" asp-controller="Search" asp-action="Search" style="padding-right: 25px;">
                        <input name="searchTerm" type="text" class="form-control" placeholder="Search... " aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>

                    <partial name="_Identity.cshtml" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark">
        <div class="flex-container">
            <div>
                <a href="https://www.facebook.com" class="fa fa-facebook"></a>
                <a href="https://www.youtube.com" class="fa fa-youtube"></a>
                <a href="https://www.twitter.com" class="fa fa-twitter"></a>
                <a href="https://www.instagram.com" class="fa fa-instagram"></a>
            </div>

            <div>
                <a asp-controller="Products" asp-action="UnderConstruction" style="color:lightslategrey">About Us</a> |
                <a asp-controller="Products" asp-action="UnderConstruction" style="color:lightslategrey">Contact</a> |
                <a asp-controller="Products" asp-action="UnderConstruction" style="color:lightslategrey">Support</a> |
                <a asp-controller="Products" asp-action="UnderConstruction" style="color:lightslategrey">FAQ</a>
            </div>

            <div>
                <a class="btn btn-outline-primary my-2 my-sum-sm-0 float-right" asp-controller="Products" asp-action="Agb">AGB</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

<style>
    .flex-container {
        display: flex;
        justify-content: center;
    }

        .flex-container > div {
            margin: auto;
        }

    #valami {
        background-color: lightgray;
    }

    .fa {
        padding: 7px;
        text-align: center;
        vertical-align: middle;
        text-decoration: none;
        margin: 15px 3px;
        border-radius: 50%;
        font-size: 17px;
    }

    .fa {
        background: #F0F0F0;
        color: #282828;
    }

    .fa-facebook:hover {
        background: #3B5998;
        color: white;
        /*line-height: inherit;*/
    }

    .fa-youtube:hover {
        background: #bb0000;
        color: white;
        /*line-height: inherit;*/
    }

    .fa-twitter:hover {
        background: #125688;
        color: white;
        /*line-height: inherit;*/
    }

    .fa-instagram:hover {
        background: #125688;
        color: white;
        /*line-height: inherit;*/
    }

    .navbar {
        animation: mymove 1.5s;
    }

    @@keyframes mymove {
        from {
            top: -50px;
        }

        to {
            top: 0px;
        }
    }
</style>