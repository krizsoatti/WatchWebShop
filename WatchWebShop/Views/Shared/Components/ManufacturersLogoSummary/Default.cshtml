@model IEnumerable<Manufacturer>

<div class="container" style="justify-content:center">
    <center>
        @foreach (var item in Model)
        {
            <img class="rounded-3" src="@item.LogoPath" alt="@item.Name" style="width:100px; padding-right: 10px">
        }
    </center>
</div>

