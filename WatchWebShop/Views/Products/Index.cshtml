@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of our Products";
}

<div class="text-black-50">
    <h1 style="text-align:center">Welcome to our Store</h1>
</div>
<br />
<br />

<div class="text-black-50">
    <h4 style="text-align:center">Our partners</h4>
</div>

<div class="container" style="justify-content:center">
    <center>
        <img src="~/Images/Casio.png" alt="Casio" style="width:15%; padding-right: 10px">
        <img src="~/Images/Certina.jpg" alt="Certina" style="width:15%; padding-right: 10px">
        <img src="~/Images/Citizen.jpg" alt="Citizen" style="width:15%; padding-right: 10px">
        <img src="~/Images/Seiko.png" alt="Seiko" style="width:15%; padding-right: 10px">
        <img src="~/Images/Tissot.jpg" alt="Tissot" style="width:15%; padding-right: 10px">
    </center>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImagePath" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Manufacturer: </b>@item.Manufacturer.Name</p>
                            <p class="card-text"><b>Category: </b>@item.Category.Name</p>
                            <p class="card-text">
                                <b>Status: </b>
                                <span class="badge bg-success">In stock</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-info float-right" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.UnitPriceNetto.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Products")