@model Manufacturer

@{
    ViewData["Title"] = "Update Manufacturer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Manufacturer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ImagePreview" class="border-info" style="max-width: 250px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoPath" class="control-label"></label>
                        <input asp-for="LogoPath" class="form-control" />
                        <span asp-validation-for="LogoPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#LogoPath").val();

        })

        $("#LogoPath").on("change", function () {
            var output = document.getElementById('ImagePreview');
            output.src = $(this).val();
        })
    </script>
}