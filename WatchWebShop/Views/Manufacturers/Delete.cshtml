@model Manufacturer

@{
    ViewData["Title"] = "Delete Manufacturer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <center><h1>Delete confirmataion for @Model.Name</h1></center>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group text-center">
                    <img class="border-info" style="max-width: 250px" id="ImagePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="LogoPath" class="control-label"></label>
                    <input asp-for="LogoPath" class="form-control" readonly />
                    <span asp-validation-for="LogoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImagePath").val();
        })
    </script>
}