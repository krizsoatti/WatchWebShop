@model IEnumerable<Manufacturer>

@{
    ViewData["Title"] = "List of our Brands";
}

@*<h2 class="align-middle">Our Brands</h2>
<br />*@

<div class="row">
    <div class="col-md-5 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Manufacturers</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th class ="text-right">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(x => x.Name))
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.LogoPath" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            <b>@Html.DisplayFor(modelItem => item.Name)</b>
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="float-right">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Manufacturers")